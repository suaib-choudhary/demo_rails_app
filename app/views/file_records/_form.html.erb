  


  <%= form_with model: [current_user,@record],method: @record.new_record? ? :post : :patch do |form| %>
    <div class="form-group mt-3">
      <%label_tag :title%> Title:
      <%= form.text_field :title,class:"form-control p-2" %>
    </div>
    <div class="form-group mt-3">
      <%label_tag :tags%> Tags: <span style="font-size:12px; float:right"> Add multiple tags seprated  by comma ','</span>
      <%= form.text_field :tags, class: "form-control p-2" %> 
    </div>
    <div class="form-group mt-3">
      <%label_tag :description%> Description:
      <%= form.text_area :description, class: "form-control p-2" %> 
      
    </div>
    <div class="form-group mt-3">
      <%label_tag :file , class: "form-control p-2"%>
      <%= form.file_field :file, direct_upload: true %>
    </div>
    
    <%= form.submit class: "btn btn-primary mt-2" %>
  <% end %>
